<body>
    <div class="container">
        <h1>Form Nilai Mahasiswa</h1>
        <form id="gradeForm">
            <div class="form-group">
                <label for="namaDepan">Nama Depan</label>
                <input type="text" id="namaDepan" name="namaDepan" required>
            </div>
            <div class="form-group">
                <label for="namaBelakang">Nama Belakang</label>
                <input type="text" id="namaBelakang" name="namaBelakang" required>
            </div>
            <div class="form-group">
                <label for="nilaiAngka">Nilai Angka</label>
                <input type="number" id="nilaiAngka" name="nilaiAngka" min="0" max="100" required>
            </div>
            <button type="submit" class="btn">Tampilkan Hasil</button>
        </form>
        <div id="result" class="result" style="display: none;"></div>
    </div>

    <script>
        function konversiNilaiHuruf(nilai) {
            if (nilai >= 85) return 'A';
            if (nilai >= 75) return 'B';
            if (nilai >= 65) return 'C';
            if (nilai >= 55) return 'D';
            return 'E';
        }

        document.getElementById('gradeForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const namaDepan = document.getElementById('namaDepan').value;
            const namaBelakang = document.getElementById('namaBelakang').value;
            const nilaiAngka = parseInt(document.getElementById('nilaiAngka').value);
            const namaLengkap = `${namaDepan} ${namaBelakang}`;
            const nilaiHuruf = konversiNilaiHuruf(nilaiAngka);
            
            // Tampilkan di halaman
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = `
                <div class="result-item">
                    <strong>Nama Lengkap:</strong> ${namaLengkap}
                </div>
                <div class="result-item">
                    <strong>Nilai Angka:</strong> ${nilaiAngka}
                </div>
                <div class="result-item">
                    <strong>Nilai Huruf:</strong> ${nilaiHuruf}
                </div>
            `;
            resultDiv.style.display = 'block';
            
            // Tampilkan di console log
            console.log(`Nama Lengkap: ${namaLengkap}`);
            console.log(`Nilai Angka: ${nilaiAngka}`);
            console.log(`Nilai Huruf: ${nilaiHuruf}`);
        });
    </script>
